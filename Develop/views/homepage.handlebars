<!-- Loop over each object in the projects array -->
{{#each comments as |comment| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a href="/comment/{{comment.id}}">{{comment.name}}</a>
    </h2>
    <p>
      {{comment.userComment}}
    </p>
    <p>Created by {{comment.user.username}} on {{format_date comment.date_created}}</p>
  </div>
</div>
{{/each}}
